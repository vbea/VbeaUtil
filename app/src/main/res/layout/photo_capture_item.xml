<?xml version="1.0" encoding="utf-8"?>
<com.vbes.util.matisse.ui.widget.SquareFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/item_placeholder"
    android:foreground="?selectableItemBackground">
    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/activity_half_margin"
        android:drawableTop="@drawable/ic_photo_camera_white_24dp"
        android:gravity="center"
        android:text="@string/photo_grid_capture"
        android:textColor="?attr/capture_textColor"
        android:textSize="14sp"/>
</com.vbes.util.matisse.ui.widget.SquareFrameLayout>